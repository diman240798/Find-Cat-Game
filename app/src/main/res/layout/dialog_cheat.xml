                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/TextView01"
                    style="@style/mStyleDialogText"
                    android:text="@string/cheat_message" />

            <Button
                    android:id="@+id/ButtonHelp"
